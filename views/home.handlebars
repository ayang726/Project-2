<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 stockInfo">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="d-inline-block">{{ticker}}</h2>
                    <div class="dropdown float-right templateDropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" id="templateDropdownBtn"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Templates
                        </button>
                        <div id="templateList" class="dropdown-menu" aria-labelledby="templateDropdownBtn">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12" id="stockView">
                    <br>

                    <h6 class="updated-quote" ticker={{ticker}} id="priceDisplay" style="margin-left: 50px"></h6>

                    <small id="openPriceDisplay" style="margin-left: 50px"></small>
                    <small id="closingPriceDisplay" style="margin-left: 50px"></small>
                    <br>

                    <div class="row">
                        <div class="col-lg-8">
                            <canvas id="myChart"></canvas>
                            <nav><button type="button" id="OneDayID" onClick="updatingChart('1d')"
                                    class="btn btn-secondary btn-sm"
                                    style="margin-left: 80px"><small>1-Day</small></button>
                                <button type="button" id="OneMonthID" onClick="updatingChart('1m')"
                                    class="btn btn-secondary btn-sm"><small>1-Month</small></button>
                                <button type="button" id="ThreeMonthID" onClick="updatingChart('3m')"
                                    class="btn btn-secondary btn-sm"><small>3-Months</small></button>
                                <button type="button" id="SixMonthID" onClick="updatingChart('6m')"
                                    class="btn btn-secondary btn-sm"><small>6-Months</small></button>
                                <button type="button" id="OneYearID" onClick="updatingChart('1y')"
                                    class="btn btn-secondary btn-sm"><small>1-Year</small></button>
                                <button type="button" id="FiveYearID" onClick="updatingChart('5y')"
                                    class="btn btn-secondary btn-sm"><small>2-Years</small></button>
                                <button type="button" id="TwoYearID" onClick="updatingChart('2y')"
                                    class="btn btn-secondary btn-sm"><small>5-Years</small></button>
                            </nav>
                            <br><br>
                        </div>
                        <div class="col-lg-4">
                            <div id="metrics">
                                <div class="row">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="newsArticles">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 text-center">
            <div class="row">
                <div class="col-lg-12">
                    <div class="watchList">
                        <h5>Watch List</h5>
                        <ul class="container text-center">
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-lg-12">
                    <button id="addToWatchList" class="btn btn-warning btn-large">Add to watchList</button>
                </div>
            </div>
        </div>
    </div>


